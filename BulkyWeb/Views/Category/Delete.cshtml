@model Category
@{
    ViewData["Title"] = "Delete Category";
}

<form method="post" asp-controller="Category" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2>Delete Category</h2>
            <hr />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="Name"></label>
            <input class="form-control" asp-for="Name" disabled />
        </div>
        <div class="row mb-3 p-1">
            <label class="p-0" asp-for="DisplayOrder"></label>
            <input class="form-control" asp-for="DisplayOrder" disabled />
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control"> Back To List</a>
            </div>
        </div>
    </div>
</form>
