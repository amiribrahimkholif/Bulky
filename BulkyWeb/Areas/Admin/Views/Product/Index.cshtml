@model List<Product>
@{
    ViewData["Title"] = "Product List";
}
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3 ">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white"> Product List</h2>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row py-4">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Product" asp-action="Create">
                    <i class="bi bi-plus-circle"></i>
                    Add New Product
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>ISBN</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>List Price</th>
                    <th>Category</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.OrderBy(c => c.ISBN))
                {
                    <tr>
                        <td>@item.ISBN</td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>@item.ListPrice</td>
                        <td>@item.Category.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
